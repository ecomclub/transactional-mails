<table align="center" class="module desktop-only" role="module" style="table-layout: fixed; width:95%;" cellspacing="0">
  <%
  order.items.forEach(item => {
    if (item.quantity > 0) {
      %>
    <tr style="border-collapse:collapse;">
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:20%;padding:10px;"><img class="max-width" border="0" style="display:block;color:#000000;text-decoration:none;font-family:Helvetica, arial, sans-serif;font-size:16px;max-width:100% !important;width:50%;height:auto !important;" src="<% if (ecomUtils.img(item)) { %> <%= ecomUtils.img(item).url %> <% } %>" alt="" width="200"></td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:40%;padding:10px;"><div style="text-align: center;"><%= ecomUtils.name(item) %></div></td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:15%;"><div style="text-align: center;">x <%= item.quantity %></div></td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:25%;"><div style="text-align: center;"> <strong> x <%= ecomUtils.formatMoney(ecomUtils.price(item) * item.quantity,) %></strong></div></td>
    </tr>
      <%
    }
  })
  %>
    <tr>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:20%;">&nbsp;</td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:40%;">&nbsp;</td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:10%;">&nbsp;</td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:30%;">&nbsp;</td>
    </tr>

    <% if (order.amount.discount) { %>
    <tr>
      <td style="width:20%;">&nbsp;</td>
      <td style="width:40%;">&nbsp;</td>
      <td style="width:15%;padding:5px;"><div style="text-align: center;"><%= i18n.discount %></div></td>
      <td style="width:25%; font-size:16px;padding:5px;"><div style="text-align: center;"><strong><%= ecomUtils.formatMoney(order.amount.discount) %></strong></div></td>
    </tr>

    <% } %>
    <% if (order.amount.subtotal) { %>
    <tr style="padding:10px;">
      <td style="width:20%;">&nbsp;</td>
      <td style="width:40%;">&nbsp;</td>
      <td style="width:15%;padding:5px;"><div style="text-align: center;"><%= i18n.subtotal %></div></td>
      <td style="width:25%; font-size:16px;padding:5px;"><div style="text-align: center;"><strong><%= ecomUtils.formatMoney(order.amount.subtotal) %></strong></div></td>
    </tr>
    <% } %>

    <% if (order.amount.freight) { %>
    <tr style=>
      <td style="width:20%;">&nbsp;</td>
      <td style="width:40%;">&nbsp;</td>
      <td style="width:15%;padding:5px;"><div style="text-align: center;"><%= i18n.freight %></div></td>
      <td style="width:25%; font-size:16px;padding:5px;"><div style="text-align: center;"><strong><%= ecomUtils.formatMoney(order.amount.freight) %></strong></div></td>
    </tr>
    <% } %>
    <% if (order.amount.tax) { %>
    <tr>
      <td style="width:20%;">&nbsp;</td>
      <td style="width:40%;">&nbsp;</td>
      <td style="width:15%;padding:5px;"><div style="text-align: center;"><%= i18n.tax %></div></td>
      <td style="width:25%; font-size:16px;padding:5px;"><div style="text-align: center;"><strong><%= ecomUtils.formatMoney(order.amount.tax) %></strong></div></td>
    </tr>
    <% } %>
    <% if (order.amount.extra) { %>
    <tr>
      <td style="width:20%;">&nbsp;</td>
      <td style="width:40%;">&nbsp;</td>
      <td style="width:10%;padding:5px;"><div style="text-align: center;"><%= i18n.extra %></div></td>
      <td style="width:30%; font-size:16px;padding:5px;"><div style="text-align: center;"><strong><%= ecomUtils.formatMoney(order.amount.extra) %></strong></div></td>
    </tr>
    <% } %>
    <% if (order.amount.total) { %>
    <tr>
      <td style="width:20%;">&nbsp;</td>
      <td style="width:40%;">&nbsp;</td>
      <td style="width:15%;padding:10px;border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid"><div style="text-align: center;"><strong style="font-size:20px;"><%= i18n.total %></strong></div></td>
      <td style="width:25%; font-size:16px;padding:10px;border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid"><div style="text-align: center;"><strong style="font-size:20px;"><%= ecomUtils.formatMoney(order.amount.total) %></strong></div></td>
    </tr>
    <% } %>
      <td style="width:40%max-width:33.333%;">&nbsp;</td>
      <td style="width:10%max-width:33.333%;">&nbsp;</td>
      <td style="width:30%max-width:33.333%;">&nbsp;</td>
    </tr>
</table>

<table align="center" class="module mobile-only" role="module" style="table-layout: fixed; width:95%;" cellspacing="0">
  <% order.items.forEach(item => { %>
    <tr style="border-collapse:collapse;">
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:60%;padding:10px;"><div style="text-align: center;"><%= ecomUtils.name(item) %></div></td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:10%;"><div style="text-align: center;">x <%= item.quantity %></div></td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:30%;"><div style="text-align: center;"> <strong> <%= ecomUtils.formatMoney(ecomUtils.price(item) * item.quantity) %></strong></div></td>
    </tr>
    <% }) %>
    <tr>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:40%;">&nbsp;</td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:10%;">&nbsp;</td>
      <td style="border-top-width:1px;border-top-color:#e5e5e5;border-top-style:solid;width:30%;">&nbsp;</td>
    </tr>

</table>
